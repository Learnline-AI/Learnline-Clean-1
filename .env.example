# Live Transcription Website - Environment Configuration
# Copy this file to .env and configure for your deployment

# === Railway Deployment Settings ===
RAILWAY_DEPLOYMENT=true
PORT=8000

# === Audio Processing Configuration ===
# Maximum audio queue size (reduce for Railway memory constraints)
MAX_AUDIO_QUEUE_SIZE=30

# Pipeline latency in seconds (higher for Railway stability)
PIPELINE_LATENCY=0.5

# === Language Configuration ===
# Default transcription language
DEFAULT_LANGUAGE=en

# Supported languages (comma-separated: en, hi, hi-en for code-switching)
SUPPORTED_LANGUAGES=en,hi,hi-en

# === Python Environment ===
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
PIP_NO_CACHE_DIR=1

# === Logging ===
LOG_LEVEL=INFO

# === Cache Directories (Railway optimization) ===
HF_HOME=/tmp/.cache/huggingface
TORCH_HOME=/tmp/.cache/torch
TRANSFORMERS_CACHE=/tmp/.cache/transformers

# === Performance Tuning ===
# Worker processes (keep at 1 for Railway memory limits)
WEB_CONCURRENCY=1

# Uvicorn workers (keep at 1 for transcription state management)
UVICORN_WORKERS=1

# === Optional: Advanced Audio Settings ===
# Audio chunk size in bytes (default handled by application)
# AUDIO_CHUNK_SIZE=4096

# Speech detection sensitivity (0.0-1.0)
# SPEECH_THRESHOLD=0.3

# === Optional: Model Configuration ===
# Whisper model size (tiny, base, small, medium, large)
WHISPER_MODEL_SIZE=base

# Enable/disable automatic language detection
AUTO_LANGUAGE_DETECTION=true

# === Optional: Security Settings ===
# Enable CORS for specific origins (comma-separated)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SSL Certificate paths (if using HTTPS)
# USE_SSL=false
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# === Development Settings (not for production) ===
# Enable debug mode (do not use in production)
# DEBUG=false

# Enable development logging
# DEV_LOGGING=false